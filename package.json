{
    "name": "saml-extension",
    "displayName": "SAML Extension",
    "description": "SAML Extension",
    "version": "0.0.1",
    "publisher": "mcastany",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:xmlSignature.sign",
        "onCommand:xmlSignature.verify",
        "onCommand:xmlSignature.encode",
        "onCommand:xmlSignature.decode",
        "onCommand:xmlSignature.encodeAndDeflate",
        "onCommand:xmlSignature.decodeAndInflate"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "xmlSignature.sign",
            "title": "SAML: Sign element"
        }, {
            "command": "xmlSignature.verify",
            "title": "SAML: Verify signature"
        }, {
            "command": "xmlSignature.encode",
            "title": "SAML: Encode element"
        }, {
            "command": "xmlSignature.decode",
            "title": "SAML: Decode element"
        }, {
            "command": "xmlSignature.encodeAndDeflate",
            "title": "SAML: Encode and Deflate element"
        }, {
            "command": "xmlSignature.decodeAndInflate",
            "title": "SAML: Decode and Inflate element"
        }],
        "configuration": {
            "type": "object",
            "title": "XML Signature extension configuration",
            "properties": {
                "xmlSignature.sig_alg": {
                    "type": [
                        "string"
                    ],
                    "default": "rsa-sha256",
                    "description": "Configure Signature Algorithm"
                },
                "xmlSignature.digest_alg": {
                    "type": [
                        "string"
                    ],
                    "default": "sha256",
                    "description": "Configure Digest Algorithm"
                },
                "xmlSignature.transforms": {
                    "type": [
                        "array"
                    ],
                    "default": [
                        "http://www.w3.org/2000/09/xmldsig#enveloped-signature",
                        "http://www.w3.org/2001/10/xml-exc-c14n#"
                    ],
                    "description": "Configure Transforms for signing"
                },
                "xmlSignature.publicKey": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "Configure Public Key"
                },
                "xmlSignature.signaturePrefix": {
                    "type": [
                        "string"
                    ],
                    "default": "ds",
                    "description": "Configure Signature Namespace prefix"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "thumbprint": "0.0.1",
        "xml-crypto": "^0.8.4",
        "xmldom": "^0.1.22",
        "xpath": "0.0.23"
    }
}